<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/cl_talk_story"
    android:layout_marginTop="65mm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_talk_story"
        android:layout_width="match_parent"
        android:layout_height="56mm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <View
            android:id="@+id/v"
            android:layout_width="9mm"
            android:layout_height="33mm"
            android:layout_centerVertical="true"
            ></View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20mm"
            android:text="元宝爸讲故事"
            android:textColor="#ff3a4970"
            android:textSize="40mm" />

        <TextView
            android:id="@+id/tv_talk_more"
            android:layout_width="154mm"
            android:layout_height="56mm"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24mm"
            android:gravity="center"
            android:text="播放全部"
            android:textSize="24mm" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_talk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24mm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_talk_story" />
</androidx.constraintlayout.widget.ConstraintLayout>