<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="32mm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_weight="1"
        android:id="@+id/rl_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="visible"
        >

        <ImageView
            android:id="@+id/img_icon_one"
            android:layout_width="108mm"
            android:layout_height="108mm" />

        <TextView
            android:id="@+id/tv_one"
            android:layout_width="108mm"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_icon_one"
            android:layout_marginTop="8mm"
            android:gravity="center"
            android:text="听儿歌"
            android:textColor="@color/text_dart_blue"
            android:textSize="26mm" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_two"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="visible"
        >

        <ImageView
            android:id="@+id/img_icon_two"
            android:layout_width="108mm"
            android:layout_height="108mm"
            />

        <TextView
            android:id="@+id/tv_two"
            android:layout_width="108mm"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_icon_two"
            android:layout_marginTop="8mm"
            android:gravity="center"
            android:text="听儿歌"
            android:textColor="@color/text_dart_blue"
            android:textSize="26mm" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/rl_three"
        android:gravity="center"
        android:visibility="visible"
        >

        <ImageView
            android:id="@+id/img_icon_three"
            android:layout_width="108mm"
            android:layout_height="108mm"
            />

        <TextView
            android:id="@+id/tv_three"
            android:layout_width="108mm"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_icon_three"
            android:layout_marginTop="8mm"
            android:gravity="center"
            android:text="听儿歌"
            android:textColor="@color/text_dart_blue"
            android:textSize="26mm" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_four"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/img_icon_four"
            android:layout_width="108mm"
            android:layout_height="108mm"
            />

        <TextView
            android:id="@+id/tv_four"
            android:layout_width="108mm"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_icon_four"
            android:layout_marginTop="8mm"
            android:gravity="center"
            android:text="听儿歌"
            android:textColor="@color/text_dart_blue"
            android:textSize="26mm" />
    </RelativeLayout>
</LinearLayout>